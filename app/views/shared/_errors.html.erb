<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <h2>Form contains <%= pluralize(@user.errors.count, "error") %>:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
