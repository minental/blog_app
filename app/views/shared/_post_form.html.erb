<%= form_for @post, :html => { :multipart => true } do |f| %>
  <div>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>
  <%= f.text_field :title, placeholder: yield(:placeholder_title) %>
  <div class="field">
  <%= f.text_area :content, placeholder: yield(:placeholder_text) %>
  </div>
  <%= f.file_field :picture %>
  <% if (can?(:approve, @post)) %>
    <div>
      <%= f.label "Approved", class: "checkbox inline" %>
      <%= f.check_box :approved%>
    </div>
  <% end %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
