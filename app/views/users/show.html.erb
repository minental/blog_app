<% provide(:title, "#{@user.name} | Blog App") %>
<% provide(:button_text, 'Post') %>
<% provide(:placeholder_text, 'Compose new post...') %>
<div class="col-md-4">
  <%= render 'shared/user_info' %>
  <% if current_user?(@user) %>
  <div class="post_form">
        <%= render 'shared/post_form' %>
  </div>
  <% end %>
</div>
<div class="col-md-8">
  <% if @user.posts.any? %>
    <ul class="posts">
      <%= render @posts %>
    </ul>
    <%= will_paginate @posts %>
  <% end %>
</div>
